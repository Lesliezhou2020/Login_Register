@using Login.Models
@model User

<!DOCTYPE html>
<html>
    <head>
        <meta charset='utf-8'>
        <title>Hello!</title>
        <link rel="stylesheet" href="~/css/style.css"/>

    </head>
    <body>
        <h1>Register to this Cool Site!</h1>
        <a href="/login">Login</a>
        <form asp-action="Register" asp-controller="Home"  method="post">
            <span asp-validation-for="FirstName"></span>
            <label asp-for="FirstName">First Name:</label>
            <input asp-for="FirstName" type="text">
            <br>
            <span asp-validation-for="LastName"></span>
            <label asp-for="LastName">Last Name:</label>
            <input asp-for="LastName" type="text">
            <br>
            <span asp-validation-for="Email"></span>
            <label asp-for="Email">Email:</label>
            <input asp-for="Email" type="text">
            <br>
            <span asp-validation-for="Password"></span>
            <label asp-for="Password">Password:</label>
            <input asp-for="Password" type="text">
            <br>
            <span asp-validation-for="Confirm"></span>
            <label asp-for="Confirm">Confirm Password:</label>
            <input asp-for="Confirm" type="text">

            <input type="submit" value="Sign up Now">
            
        </form>
        
     
    </body>
</html>